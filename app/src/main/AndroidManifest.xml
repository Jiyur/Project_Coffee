        <activity
            android:name=".Activities.CategoryActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.LoginSignup.PasswordResetMessage"
            android:exported="false" />
        <activity
            android:name=".Activities.LoginSignup.SetNewPassword"
            android:exported="false" />
        <activity
            android:name=".Activities.LoginSignup.ForgetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.HomePageActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.LoginSignup.VerifyOTPActivity"
            android:exported="false" />
