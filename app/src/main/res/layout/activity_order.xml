<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Activities.Order.OrderActivity"
    android:weightSum="10"
    android:background="@color/background_color">
    <ImageView
        android:id="@+id/imageviewdrink"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"/>
    <TextView
        android:id="@+id/textviewname"
        android:text="name"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="7"
        android:orientation="horizontal">
        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/buttonminus"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_button_payment"
            android:textSize="30dp"
            android:text="-"/>
        <TextView
            android:id="@+id/textviewquantity"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30dp"
            android:text="0"/>
        <Button
            android:id="@+id/buttonadd"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_button_payment"
            android:textSize="30dp"
            android:text="+"/>
        <View
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </LinearLayout>
<!--    <View-->
<!--        android:layout_weight="1"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"/>-->
    <Button
        android:id="@+id/buttonorder"
        android:onClick="btnOrder_Click"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Order"
        android:textColor="#FFEB3B"
        android:textSize="20dp"
        android:background="@drawable/custom_button_payment"/>

    <Button
        android:id="@+id/buttonback"
        android:onClick="btnBack_Click"
        android:text="Quay laÌ£i"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#F44336"
        android:background="@drawable/custom_button_payment"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints"/>
</LinearLayout>